    <script>
        // Commissions data from Laravel
        const commissionsData = @json($Commissions);

        // Render table function
// Render table function
function renderTable(data = commissionsData) {
    const tbody = document.getElementById('tableBody');
    tbody.innerHTML = '';

    // Calculate total columns based on user role
    const totalColumns = window.isAdmin ? 18 : 17;

    if (!data || data.length === 0) {
        tbody.innerHTML = `
            <tr>
                <td colspan="${totalColumns}" class="empty-state text-center">
                    <div class="empty-icon">
                        <i class="fas fa-users-slash"></i>
                    </div>
                    <div class="empty-text">لا توجد بيانات متاحة</div>
                </td>
            </tr>
        `;
        return;
    }

    data.forEach(commission => {
        // Convert string numbers to proper numbers
        const achievedPercentage = parseFloat(commission.achieved_percentage) || 0;
        const commissionRate = parseFloat(commission.commission_rate) || 0;
        const totalCommission = parseFloat(commission.total_commission) || 0;

        const row = document.createElement('tr');
        row.className = 'hover:bg-gray-50 text-center';
        row.innerHTML = `
            <td class="px-6 py-4 text-sm font-bold text-blue-700">
                <span class="inline-block bg-blue-100 text-blue-800 px-3 py-1 rounded-full">
                    ${commission.service_type || 'N/A'}
                </span>
            </td>
            <td class="px-6 py-4 text-sm text-gray-800">
                ${commission.total_achieved_amount || 0}
            </td>
            <td class="px-6 py-4 text-sm ${
                achievedPercentage < 70 ? 'text-red-600 font-semibold' :
                achievedPercentage < 100 ? 'text-orange-600 font-semibold' : 
                'text-green-600 font-semibold'
            }">
                ${achievedPercentage}%
            </td>
            <td class="px-6 py-4 text-sm text-gray-800">
                ${commissionRate}%
            </td>
            ${Array.from({ length: 12 }, (_, i) => {
                const monthIndex = i + 1;
                const monthCommission = parseFloat(commission[`month_commission_${monthIndex}`]) || 0;
                const isPaid = commission[`payment_status_month_${monthIndex}`] === 1;
                
                return `
                <td class="px-2 py-3 text-sm ${
                    isPaid ? 'text-green-600 font-semibold' : 'text-gray-800'
                }">
                    ${monthCommission.toFixed(2)}
                    ${isPaid ? '<div class="text-xs mt-1 text-green-500">✓ تم الصرف</div>' : ''}
                </td>
                `;
            }).join('')}
            <td class="px-4 py-3 text-sm font-semibold text-center text-gray-800">
                ${totalCommission.toFixed(2)}
            </td>
            <td class="px-4 py-3 text-sm ${
                commission.all_paid ? 'text-green-600 font-semibold' : 
                commission.some_paid ? 'text-orange-600 font-semibold' : 'text-gray-800'
            }">
                ${commission.all_paid ? 'تم الصرف' : 
                 commission.some_paid ? 'جزئي' : 'لم يتم الصرف'}
            </td>
            ${window.isAdmin ? `
            <td class="px-4 py-3">
                <a href="/commissions/${commission.id}/payment-done"
                   class="px-3 py-1 bg-green-500 text-white rounded hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-green-400 inline-block">
                    تم الصرف
                </a>
            </td>
            ` : ''}
        `;
        tbody.appendChild(row);
    });
}        // Filter functionality
        let currentFilteredCommissions = [...commissionsData];

        function applyFilter() {
            const criteria = document.getElementById('filterSelect').value;

            if (!criteria) {
                currentFilteredCommissions = [...commissionsData];
                renderTable(currentFilteredCommissions);
                return;
            }

            switch (criteria) {
                case 'paid':
                    currentFilteredCommissions = commissionsData.filter(c => c.all_paid);
                    break;
                case 'unpaid':
                    currentFilteredCommissions = commissionsData.filter(c => !c.all_paid);
                    break;
                default:
                    currentFilteredCommissions = [...commissionsData];
            }

            renderTable(currentFilteredCommissions);
        }

        function applyYearFilter() {
            const year = document.getElementById('yearSelect').value;
            const url = new URL(window.location.href);
            url.searchParams.set('year', year);
            window.location.href = url.toString();
        }

        function handleExport() {
            const exportType = document.getElementById('exportType').value;
            if (exportType === 'excel') {
                exportCommissions();
            } else if (exportType === 'pdf') {
                generateCommissionsPDF();
            }
        }

        // Search function
        document.getElementById('searchInput').addEventListener('input', function(e) {
            const searchTerm = e.target.value.toLowerCase();
            const filteredData = commissionsData.filter(commission =>
                commission.service_type.toLowerCase().includes(searchTerm) ||
                (commission.total_commission.toString().includes(searchTerm))
            );
            renderTable(filteredData);
        });

        // Export to Excel
        function exportCommissions() {
            try {
                if (typeof XLSX === 'undefined') {
                    alert('Excel export library not loaded!');
                    return;
                }

                if (!commissionsData || commissionsData.length === 0) {
                    alert('No data available to export!');
                    return;
                }

                const headers = [
                    "نوع الخدمة",
                    "المبلغ المحقق",
                    "نسبة التحقيق",
                    "نسبة العمولة",
                    "الشهر 1",
                    "الشهر 2",
                    "الشهر 3",
                    "الشهر 4",
                    "الشهر 5",
                    "الشهر 6",
                    "الشهر 7",
                    "الشهر 8",
                    "الشهر 9",
                    "الشهر 10",
                    "الشهر 11",
                    "الشهر 12",
                    "المجموع الكلي",
                    "حالة الصرف"
                ];

                const data = commissionsData.map(commission => [
                    commission.service_type || 'N/A',
                    commission.total_achieved_amount || 0,
                    commission.achieved_percentage || 0,
                    commission.commission_rate || 0,
                    ...Array.from({ length: 12 }, (_, i) => commission[`month_commission_${i+1}`] || 0),
                    commission.total_commission || 0,
                    commission.all_paid ? 'تم الصرف' : 'لم يتم الصرف'
                ]);

                const ws = XLSX.utils.aoa_to_sheet([headers, ...data]);
                ws['!cols'] = [
                    { wch: 25 },  // Service type
                    { wch: 15 },  // Achieved amount
                    { wch: 15 },  // Achieved percentage
                    { wch: 15 },  // Commission rate
                    ...Array(12).fill({ wch: 10 }),  // 12 months
                    { wch: 15 },  // Total
                    { wch: 15 }    // Payment status
                ];

                const wb = XLSX.utils.book_new();
                XLSX.utils.book_append_sheet(wb, ws, "تقرير العمولات");
                XLSX.writeFile(wb, "تقرير_العمولات.xlsx");

            } catch (error) {
                console.error('Export error:', error);
                alert('حدث خطأ أثناء التصدير: ' + error.message);
            }
        }

        function generateCommissionsPDF() {
            const header = document.querySelector('.pdf-header');
            const footer = document.querySelector('.pdf-footer');
            const element = document.querySelector('.pdf-content');

            if (header) header.style.display = 'block';
            if (footer) footer.style.display = 'block';

            if (!element) {
                console.error('PDF content element not found');
                return;
            }

            const options = {
                margin: 0.5,
                filename: 'commissions-report.pdf',
                image: { type: 'jpeg', quality: 0.98 },
                html2canvas: { scale: 2, useCORS: true },
                jsPDF: { unit: 'in', format: 'a4', orientation: 'landscape' }
            };

            html2pdf().set(options).from(element).save().then(() => {
                if (header) header.style.display = 'none';
                if (footer) footer.style.display = 'none';
            });
        }

        // Initialize table when DOM is loaded
        document.addEventListener('DOMContentLoaded', function() {
            renderTable();
        });
    </script>
